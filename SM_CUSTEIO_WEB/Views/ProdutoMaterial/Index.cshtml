@model IEnumerable<SM_CUSTEIO_WEB.Models.ProdutoMaterial>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<div class="table">
    @Html.ActionLink("Adicionar Material", "Create", new { id = @ViewBag.ProdutoID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Listar Produtos", "Index", "Produto", null, new { @class = "btn btn-default" })
</div>

<table id="table" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QtdMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material.Nome_Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material.Nome_Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QtdMaterial)
                </td>
                <td class="btn btn-sm">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
