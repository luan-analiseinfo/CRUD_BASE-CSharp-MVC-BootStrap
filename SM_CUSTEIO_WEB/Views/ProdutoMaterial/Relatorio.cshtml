@model IEnumerable<SM_CUSTEIO_WEB.Models.ProdutoMaterial>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<div class="table">
    <table class="table">
        <thead>
            <tr>
                <th>Preço do Produto : R$ @ViewBag.TotalProduto</th>
                <th>Preço de Custo : R$ @ViewBag.TotalMateriais</th>
                <th>Margem de Lucro : @ViewBag.MLucro %</th>
                
            </tr>
            </thead>
    </table>
   
    
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QtdMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material.Nome_Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto.Nome)
            </th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material.Nome_Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QtdMaterial)
                </td>
                <td>
                   R$ @Html.DisplayFor(modelItem => item.Material.Preco_produto)
                </td>
            </tr>
        }
    </tbody>
</table>
