@model IEnumerable<SM_CUSTEIO_WEB.Models.Produto>

@{
    ViewBag.Title = "Index";
}

    <div class="well well-sm">
        <strong>Lista de Produtos</strong>
    </div>
<div class="table btn-group-sm">
    @Html.ActionLink("Adicionar Produto", "Create", null, new { @class = "btn btn-primary" })
</div>

<table id="table" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th>
                Preço
            </th>
            <th>
                Empresa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                   R$ @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.Nome)
                </td>
                <td>
                        <div class="btn-group-sm">
                            @Html.ActionLink("Alterar", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Visualizar", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                            @Html.ActionLink("Lista de Materiais", "Index", "ProdutoMaterial", new { id = item.Id }, new { @class = "btn btn-default" })
                            @Html.ActionLink("Relatório", "Relatorio", "ProdutoMaterial", new { id = item.Id }, new { @class = "btn btn-success" })
                         </div>              
                 </td>
            </tr>

        }
    </tbody>
</table>

<div class="table" >
    <div><a href="@Url.Action("Report", new { id = "PDF" })">Imprimir PDF</a></div>
    <div><a href="@Url.Action("Report", new { id = "Excel" })">Imprimir Excel</a></div>
    <div><a href="@Url.Action("Report", new { id = "Word" })">Imprimir Word</a></div>
    <div><a href="@Url.Action("Report", new { id = "Image" })">Imprimir Image</a></div>

    <div><a href="@Url.Action("ReportProdutoView", new { id = "PDF" })">Imprimir RELATÓRIO</a></div>
</div>
