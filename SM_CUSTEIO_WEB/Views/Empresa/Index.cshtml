@model IEnumerable<SM_CUSTEIO_WEB.Models.Empresa>

@{
    ViewBag.Title = "Index";
}

<img src="http://chart.apis.google.com/chart?chxt=x,y&cht=bvs&chd=t:60,70,85,65,40&chco=76A4FB&chls=2.0&chs=180x150&chxl=0:|Jan|Fev|Mar|Abr|Mai" alt="Macoratti .net" />

<div class="btn-group-sm">
    @Html.ActionLink("Adicionar Empresa", "Create", null, new { @class = "btn btn-primary" })
</div>
<div class="panel-body">
    <div class="dataTable_wrapper">
        <table id="table" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Endereco)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Website)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Website)
                        </td>
                        <td class="btn-group-sm">
                            @Html.ActionLink("Alterar", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Visualizar", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                        
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
